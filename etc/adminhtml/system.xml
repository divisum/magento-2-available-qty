
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../Backend/etc/system_file.xsd">
    <system>
        <tab id="metagento" translate="label" sortOrder="777">
            <label>Metagento Extensions</label>
        </tab>
        <section id="availableqty" translate="label" sortOrder="1" showInDefault="1"
                 showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Available Qty</label>
            <tab>metagento</tab>
            <resource>Metagento_AvailableQty::config_availableqty</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1"
                   showInWebsite="1" showInStore="1">
                <comment><![CDATA[<p><strong>If you need help with any function of Magento, we provide Custom Development Service, please visit our website to review our service: <a href="https://www.metagento.com">https://www.metagento.com</a></strong></p>]]></comment>
                <label>General Configuration</label>
                <field id="enabled" translate="label" type="select" sortOrder="10"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Module</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="auto_add" translate="label" type="select" sortOrder="20"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Auto add available qty to cart when requested qty is not available</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>